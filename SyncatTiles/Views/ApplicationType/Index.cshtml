@model IEnumerable<SyncatTiles.Models.ApplicationType>

<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Appplication Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-outline-primary ">

                Create Application Type

            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:50%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="65%">
                            @obj.Name
                        </td>

                        <td >
                            <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Edit" class=" btn btn-outline-primary mx-2">
                                <i class="fas fa-edit"></i> &nbsp;
                            </a>
                            <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Delete" class=" btn btn- btn-outline-danger mx-2">
                                <i class="fas fa-trash-alt"></i> &nbsp;
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Application Type exists</p>
    }
</div>



